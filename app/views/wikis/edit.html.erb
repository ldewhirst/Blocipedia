<h1>Edit Wiki</h1>
  <div class="row">
    <div class="col-md-4">

<%= form_for @wiki do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>

<div class="field">
  <%= render :partial => 'form', :locals => {:f => f} %>
</div>

    <% @users.each do |user| %>
      <%= check_box_tag "wiki[user_ids][]", user.id, @wiki.users.include?(user), id: dom id(user) %>
      <%= label_tag dom id(user), user.email %>
    <% end %>

<!-- <%= render :partial => 'collaborators', :locals => {:wiki => @wiki} %> -->

<div class="form-group">
  <%= f.submit "Save" %>
<% end %>

</div>
</div>
