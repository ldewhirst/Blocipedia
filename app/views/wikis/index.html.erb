<div class="container">
  <h2>Wikis</h2>

  <div class="row">
      <% @wikis.each do |wiki| %>
        <table class="table table-hover">
          <tbody>
            <tr>
              <div class="col-md-4">
              <td><%= link_to wiki.title, wiki_path(wiki)  %></td>
              </div>
              <div class="col-md-4">
              <td><%= wiki.body %></td>
              </div>
            </tr>
          </tbody>
        </table>

      <% end %>

  <% if user_signed_in? %>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
