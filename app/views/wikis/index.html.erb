<div class="container">
  <h2>Wikis</h2>

  <div class="row">
    <div class="col-md-8">
      <% @wikis.each do |wiki| %>

        <table class="table">
          <tbody>
            <td><%= link_to wiki.title, user_wiki_path(wiki.user, wiki)  %></td>
            <td><%= wiki.body %></td>
          </tbody>
        </table>

      <% end %>

  <% if user_signed_in? %>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_user_wiki_path(current_user), class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
