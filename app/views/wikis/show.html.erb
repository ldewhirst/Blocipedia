<h1>
  <%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-4">
    <p><%= @wiki.body %></p>
  </div>
  <% if user_signed_in? %>
    <%= link_to "Delete Wiki", [@wiki.user, @wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <%= link_to "Edit Wiki", edit_user_wiki_path(current_user, @wiki) %>
  </div>
  <% end %>

</div>
