<h1>
  <%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-4">
    <p><%= @wiki.body %></p>
  </div>
  <% if current_user || user.admin? %>
    <%= link_to "Delete Post", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <%= link_to "Edit Post", edit_wiki_path(@wiki) %>
  </div>
  <% end %>

</div>
